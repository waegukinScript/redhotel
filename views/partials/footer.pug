// Modal
#reservation-form.modal.fade(tabindex='-1' role='dialog' aria-labelledby='reservationFormTitle' aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
        .modal-content
            .modal-body
                .row
                    .col-md-12(data-aos='fade-up' data-aos-delay='100')
                        form.bg-white.p-4(action='index.html' method='post')
                            .row.mb-4
                                .col-12
                                    h2 Reservation
                            .row
                                .col-md-6.form-group
                                    label.text-black.font-weight-bold(for='name') Name
                                    input#name.form-control(type='text')
                                .col-md-6.form-group
                                    label.text-black.font-weight-bold(for='phone') Phone
                                    input#phone.form-control(type='text')
                            .row
                                .col-md-12.form-group
                                    label.text-black.font-weight-bold(for='email') Email
                                    input#email.form-control(type='email')
                            .row
                                .col-md-6.form-group
                                    label.text-black.font-weight-bold(for='checkin_date') Date Check In
                                    input#checkin_date.form-control(type='text')
                                .col-md-6.form-group
                                    label.text-black.font-weight-bold(for='checkout_date') Date Check Out
                                    input#checkout_date.form-control(type='text')
                            .row
                                .col-md-6.form-group
                                    label.font-weight-bold.text-black(for='adults') Adults
                                    .field-icon-wrap
                                        .icon
                                            span.ion-ios-arrow-down
                                        select#adults.form-control(name='')
                                            option(value='') 1
                                            option(value='') 2
                                            option(value='') 3
                                            option(value='') 4+
                                .col-md-6.form-group
                                    label.font-weight-bold.text-black(for='children') Children
                                    .field-icon-wrap
                                        .icon
                                            span.ion-ios-arrow-down
                                        select#children.form-control(name='')
                                            option(value='') 1
                                            option(value='') 2
                                            option(value='') 3
                                            option(value='') 4+
                            .row.mb-4
                                .col-md-12.form-group
                                    label.text-black.font-weight-bold(for='message') Notes
                                    textarea#message.form-control(name='message' cols='30' rows='8')
                            .row
                                .col-md-6.form-group
                                    input.btn.btn-primary.text-white.py-3.px-5.font-weight-bold(type='submit' value='Reserve Now')
